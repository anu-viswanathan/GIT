<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Email_Label</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISPICKVAL(Link_Type__c, &apos;No Link&apos;)),
ISBLANK(Link_Label__c) 
)</errorConditionFormula>
    <errorDisplayField>Link_Label__c</errorDisplayField>
    <errorMessage>Be sure to fill in the Link Label when you select a Link Type</errorMessage>
</ValidationRule>
