<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Email_Link</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Link_Type__c, &apos;Email To&apos;),
ISBLANK(Email_Recipient__c) 
)</errorConditionFormula>
    <errorDisplayField>Email_Recipient__c</errorDisplayField>
    <errorMessage>Be sure to fill in the appropriate fields based on the link type selected.</errorMessage>
</ValidationRule>
