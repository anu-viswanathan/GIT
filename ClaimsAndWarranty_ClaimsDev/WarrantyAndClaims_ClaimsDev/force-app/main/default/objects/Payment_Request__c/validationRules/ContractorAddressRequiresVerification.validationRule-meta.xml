<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ContractorAddressRequiresVerification</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
TEXT(Account__r.Address_Verification_Status__c) &lt;&gt; &apos;Verified&apos;,
Account__r.RecordType.DeveloperName = &apos;Contractor&apos; 
)</errorConditionFormula>
    <errorMessage>The contractor&apos;s address you&apos;ve selected must be verified.</errorMessage>
</ValidationRule>
