<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Bundle_Material_Value__c</fullName>
    <description>Used for calculating the value of the bundle material for a settlement; this can be referenced in other formula fields or conga documents</description>
    <externalId>false</externalId>
    <formula>IF(
    ISBLANK(Num_of_Bundles_for_Settlement__c),
    Suggested_Bundles_for_Settlement__c   *  Bundle_Rate__c,
    Num_of_Bundles_for_Settlement__c * Bundle_Rate__c
)</formula>
    <label>Bundle Material Value</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Currency</type>
</CustomField>
