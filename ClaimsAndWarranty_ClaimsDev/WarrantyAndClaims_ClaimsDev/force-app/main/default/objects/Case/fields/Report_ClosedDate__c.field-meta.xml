<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Report_ClosedDate__c</fullName>
    <description>Field to be used by the reports touching on the closeddate field. Formula would indicate whether to use SF closeddate or the legacy closeddate.
ClaimsV2-699</description>
    <externalId>false</externalId>
    <formula>IF( 
    ISBLANK(Legacy_ClosedDate__c) , ClosedDate  , IF ( 
                                                     ISPICKVAL(Status,&quot;Closed&quot;),IF (
                                                                                   ISBLANK( Re_Open_Date_Time__c ), Legacy_ClosedDate__c, IF (
                                                                                                                                             DATEVALUE(ClosedDate) = DATE(2019,11,15), 
                                                                                                                                                  Legacy_ClosedDate__c,ClosedDate
                                                                                                                                             )
                                                                                                                                                    
                                                                                    ), NULL
                                                    )
  )</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Report ClosedDate</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>DateTime</type>
</CustomField>
