<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>You_can_not_enter_letters_in_phone_field</fullName>
    <active>true</active>
    <errorConditionFormula>AND(OR(
RecordType.DeveloperName = &quot;IKOPRO_Contractor&quot;,
RecordType.DeveloperName = &quot;IKOPRO_Contractor_HA_OK&quot;),NOT(REGEX(  Phone , &quot;[0-9+/\\-\\(\\)\\s\\.]*&quot;)))</errorConditionFormula>
    <errorMessage>You cannot enter alphabets in Phone field.</errorMessage>
</ValidationRule>
